<script>
  document.addEventListener('DOMContentLoaded', function () {
    const editorialButtons = document.querySelectorAll('.editorial-products__button');

    // Handle toggle button clicks
    editorialButtons.forEach(function (button) {
      // Store the original button text
      const originalText = button.textContent.trim();
      const hideText = 'Hide Products';

      button.addEventListener('click', function (e) {
        e.preventDefault();

        // Find the editorial-products container in the same section
        const imageWithTextContainer = button.closest('.image-with-text');
        const productsContainer = imageWithTextContainer.querySelector('.editorial-products');

        if (productsContainer) {
          // Toggle the overlay visibility
          const isShowing = productsContainer.classList.contains('show');

          if (isShowing) {
            // Hide products
            productsContainer.classList.remove('show');
            button.textContent = originalText;
            button.setAttribute('aria-expanded', 'false');
          } else {
            // Show products
            productsContainer.classList.add('show');
            button.textContent = hideText;
            button.setAttribute('aria-expanded', 'true');
          }
        }
      });
    });
  });
</script>
