{
  "name": "Sustainability Feature",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Section Title</p>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
