          <div class='swiper-button-prev collection-nav-prev'></div>
          <div class='swiper-button-next collection-nav-next'></div>

          <!-- Swiper Pagination -->
          <div class='swiper-pagination collection-pagination'></div>
          </div>
        {%- endif -%}
      {% endif %}
    </div>
  </div>
