{%- unless section.settings.use_advanced_commerce -%}
  <style>
    /* Collection Swiper Carousel Styles */
    .collection-swiper {
      overflow: hidden;
      position: relative;
    }

    .collection-swiper .swiper-wrapper {
      display: flex;
      flex-wrap: nowrap;
    }

    .collection-swiper .swiper-slide {
      flex-shrink: 0;
      width: auto;
      margin-right: 2rem;
    }

    .card-media-carousel .swiper-slide {
      margin-right: 0 !important;
    }

    /* Mobile: show 1-2 products */
    @media screen and (max-width: 749px) {
      .collection-swiper .swiper-slide {
        width: calc(50% - 1rem);
      }

      .collection-swiper .swiper-slide:only-child,
      .collection-swiper[data-mobile-columns='1'] .swiper-slide {
        width: calc(100% - 2rem);
      }
    }

    /* Desktop: show multiple products based on grid settings */
    @media screen and (min-width: 750px) {
      .collection-swiper .swiper-slide {
        width: calc(25% - 1.5rem); /* Default 4 columns */
      }

      .collection-swiper[data-desktop-columns='3'] .swiper-slide {
        width: calc(33.333% - 1.33rem);
      }

      .collection-swiper[data-desktop-columns='5'] .swiper-slide {
        width: calc(20% - 1.6rem);
      }

      .collection-swiper[data-desktop-columns='6'] .swiper-slide {
        width: calc(16.666% - 1.66rem);
      }
    }

    /* Navigation Buttons */
    .collection-nav-prev,
    .collection-nav-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 10;
      width: 3rem;
      height: 3rem;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .collection-nav-prev {
      left: 1rem;
    }

    .collection-nav-next {
      right: 1rem;
    }

    .collection-nav-prev:hover,
    .collection-nav-next:hover {
      background: rgba(255, 255, 255, 1);
      transform: translateY(-50%) scale(1.1);
    }

    .collection-nav-prev.swiper-button-disabled,
    .collection-nav-next.swiper-button-disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    /* Pagination */
    .collection-pagination {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 0.5rem;
    }

    .collection-pagination .swiper-pagination-bullet {
      width: 0.75rem;
      height: 0.75rem;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 50%;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .collection-pagination .swiper-pagination-bullet-active {
      background: rgb(var(--color-foreground));
      transform: scale(1.2);
    }

    /* Hide navigation on mobile when disabled */
    @media screen and (max-width: 749px) {
      .collection-swiper:not([data-mobile-enabled='true']) .collection-nav-prev,
      .collection-swiper:not([data-mobile-enabled='true']) .collection-nav-next,
      .collection-swiper:not([data-mobile-enabled='true']) .collection-pagination {
        display: none;
      }
    }

    /* Hide navigation on desktop when disabled */
    @media screen and (min-width: 750px) {
      .collection-swiper:not([data-desktop-enabled='true']) .collection-nav-prev,
      .collection-swiper:not([data-desktop-enabled='true']) .collection-nav-next,
      .collection-swiper:not([data-desktop-enabled='true']) .collection-pagination {
        display: none;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const collectionSwipers = document.querySelectorAll('.collection-swiper');

      collectionSwipers.forEach(function(swiperElement) {
        const sectionId = swiperElement.getAttribute('data-section-id');
        const isMobileEnabled = {{ show_mobile_slider | json }};
        const isDesktopEnabled = {{ show_desktop_slider | json }};
        const mobileColumns = {{ section.settings.columns_mobile | json }};
        const desktopColumns = {{ section.settings.columns_desktop | json }};

        // Set data attributes for CSS
        swiperElement.setAttribute('data-mobile-enabled', isMobileEnabled);
        swiperElement.setAttribute('data-desktop-enabled', isDesktopEnabled);
        swiperElement.setAttribute('data-mobile-columns', mobileColumns);
        swiperElement.setAttribute('data-desktop-columns', desktopColumns);

        // Initialize Swiper when library is loaded
        function initializeSwiper() {
          if (typeof Swiper === 'undefined') {
            setTimeout(initializeSwiper, 100);
            return;
          }

          const swiper = new Swiper(swiperElement, {
            slidesPerView: 'auto',
            spaceBetween: 16,
            freeMode: false,
            grabCursor: true,

            // Enable/disable based on breakpoint and settings
            allowTouchMove: true,

            // Responsive breakpoints
            breakpoints: {
              0: {
                slidesPerView: mobileColumns,
                spaceBetween: 16,
                allowTouchMove: isMobileEnabled
              },
              750: {
                slidesPerView: desktopColumns,
                spaceBetween: 24,
                allowTouchMove: isDesktopEnabled
              }
            },

            // Navigation
            navigation: {
              nextEl: swiperElement.querySelector('.collection-nav-next'),
              prevEl: swiperElement.querySelector('.collection-nav-prev'),
            },

            // Pagination
            pagination: {
              el: swiperElement.querySelector('.collection-pagination'),
              clickable: true,
              dynamicBullets: true,
              dynamicMainBullets: 3,
            },

            // Disable on certain conditions
            enabled: isMobileEnabled || isDesktopEnabled,

            // Auto-disable when all slides fit
            watchOverflow: true,
          });

          console.log('Collection Swiper initialized for section:', sectionId);
        }

        initializeSwiper();
      });
    });
  </script>
{%- endunless -%}

